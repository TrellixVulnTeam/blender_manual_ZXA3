#!/bin/bash
target_location=/run/media/htran/WD_4657_49_GB_001/
binpath=$target_location/bin.tar.gz
blender_svn_file=$target_location/blender_svn.tar.gz
blender_local_git_file=$target_location/blender_local_git.tar.gz
tar -czvf $binpath $HOME/bin | tee bin.log
tar -czvf $blender_svn_file $HOME/blender-svn | tee blender_svn.log
tar -czvf $blender_local_git_file $HOME/blender-trans | tee blender_trans.log

